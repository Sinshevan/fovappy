<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_gambarresto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@drawable/ciclo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_namamakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Sambal Amu"
        app:layout_constraintStart_toEndOf="@id/iv_gambarresto"
        app:layout_constraintTop_toTopOf="@id/iv_gambarresto"/>
    <TextView
        android:id="@+id/tv_jalan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:text="Jalan Rajawali"
        app:layout_constraintStart_toEndOf="@id/iv_gambarresto"
        app:layout_constraintTop_toBottomOf="@id/tv_namamakanan"/>

</androidx.constraintlayout.widget.ConstraintLayout>