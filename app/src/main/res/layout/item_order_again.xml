<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_backorder"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_gambar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="@id/iv_backorder"
            app:layout_constraintEnd_toEndOf="@id/iv_backorder"
            android:src="@drawable/ciclo"
            app:layout_constraintStart_toStartOf="@id/iv_backorder"/>
        <TextView
            android:id="@+id/tv_namamakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Ciclo Cafe"
            app:layout_constraintEnd_toEndOf="@id/iv_backorder"
            app:layout_constraintStart_toStartOf="@id/iv_backorder"
            app:layout_constraintTop_toBottomOf="@id/iv_gambar"/>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_play_circle_filled_24"
            app:layout_constraintBottom_toBottomOf="@id/iv_backorder"
            app:layout_constraintStart_toStartOf="@id/iv_backorder"
            app:layout_constraintEnd_toEndOf="@id/iv_backorder"
            app:layout_constraintTop_toBottomOf="@id/tv_namamakanan"/>
</androidx.constraintlayout.widget.ConstraintLayout>