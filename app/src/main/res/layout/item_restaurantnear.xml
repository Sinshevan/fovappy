<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/iv_gambarmakanan"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:src="@drawable/ciclo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/penutup"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/black"
            android:alpha="0.8"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,2:1"
            app:layout_constraintEnd_toEndOf="@id/iv_gambarmakanan"
            app:layout_constraintStart_toStartOf="@id/iv_gambarmakanan"
            app:layout_constraintBottom_toBottomOf="@id/iv_gambarmakanan"/>

        <TextView
            android:id="@+id/tv_diskon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Save upto 20%"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/penutup"
            app:layout_constraintStart_toStartOf="@id/iv_gambarmakanan"
            app:layout_constraintBottom_toBottomOf="@id/iv_gambarmakanan"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/iv_gambarmakanan"
            app:layout_constraintTop_toTopOf="@id/iv_gambarmakanan"/>
        <TextView
            android:id="@+id/tv_namamakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:text="Sambal Amu"
            app:layout_constraintStart_toEndOf="@id/iv_gambarmakanan"
            app:layout_constraintTop_toTopOf="@id/iv_gambarmakanan"/>
        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/iv_gambarmakanan"
            app:layout_constraintTop_toBottomOf="@id/tv_namamakanan"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_baseline_stars_24"
            android:drawableTint="#4CAF50"
            android:textSize="20sp"
            android:text=" 3.9 (50+ ratings)"/>
        <TextView
            android:id="@+id/tv_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:text="36 mins"
            app:layout_constraintStart_toEndOf="@id/iv_gambarmakanan"
            app:layout_constraintTop_toBottomOf="@id/tv_rating"/>
        <TextView
            android:id="@+id/tv_jalan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:text="jl. Rajawali"
            app:layout_constraintStart_toEndOf="@id/iv_gambarmakanan"
            app:layout_constraintTop_toBottomOf="@id/tv_waktu"/>

</androidx.constraintlayout.widget.ConstraintLayout>